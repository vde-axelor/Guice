<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
	<session-factory>
		<!-- Connection settings -->
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/servletdb
		</property>
		<property name="hibernate.connection.username">axelor</property>
		<property name="hibernate.connection.password">axelor</property>
		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect
		</property>
		<!-- Print executed SQL to stdout -->
		<property name="show_sql">true</property>
		<!-- Update database on startup -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- Annotated entity classes -->
		<mapping class="com.unique.app.main.Student" />
	</session-factory>
</hibernate-configuration>